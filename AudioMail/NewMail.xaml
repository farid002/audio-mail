<Window x:Class="AudioMail.NewMail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioMail"
        mc:Ignorable="d"
        Title="NewMail" Height="450" Width="800" Loaded="NewMail_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120*"/>
            <ColumnDefinition Width="673*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="Record_Button" Content="Record" HorizontalAlignment="Left" Margin="171,72,0,0" VerticalAlignment="Top" Width="75" Click="Record_Button_Click" Grid.Column="1"/>
        <Button x:Name="Stop_Button" Content="Stop" Grid.Column="1" HorizontalAlignment="Left" Margin="294,72,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.333,0.396" Click="Stop_Button_Click" IsEnabled="False"/>
        <RichTextBox x:Name="newMailBox" Grid.Column="1" HorizontalAlignment="Left" Height="100" Margin="142,144,0,0" VerticalAlignment="Top" Width="263">
            <FlowDocument/>
        </RichTextBox>
        <ProgressBar x:Name="Progress_Bar" Grid.Column="1" HorizontalAlignment="Left" Height="10" Margin="171,114,0,0" VerticalAlignment="Top" Width="198" IsEnabled="False"/>
    </Grid>
</Window>
